public static void subtrairMatrizes(double[][] A, double[][] B, double[][] C) {
    // Verifica se s√£o matrizes 3x1
    if (A.length != 3 || B.length != 3 || C.length != 3 ||
        A[0].length != 1 || B[0].length != 1 || C[0].length != 1) {
        throw new IllegalArgumentException("As matrizes devem ter tamanho 3x1.");
    }

    for (int i = 0; i < 3; i++) {
        C[i][0] = A[i][0] - B[i][0];
    }
}
